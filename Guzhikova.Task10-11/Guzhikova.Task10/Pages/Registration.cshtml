@using Guzhikova.Task10.Model;
@using Guzhikova.Task10.Control;

@{
    Layout = "~/Pages/Layouts/_Layout.cshtml";

    DBManage db = new DBManage();

    WebUser user = null;
    string login = null;
    string password = null;
    string email = null;

    if(IsPost)
    {
        login = Request["login"];
        password = Request["password"];
        email = Request["email"];

         user = new WebUser
        {
            Login = login,
            Password = password,
            Email = email
        };

        user = db.AddUser(user);
        Response.Redirect("~");
    }
}

